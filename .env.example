# Environment Configuration
# Copy this file to .env and customize for your setup

# Network selection (testnet or mainnet)
NETWORK=testnet

# Version configuration
OASIS_NODE_VERSION=24.2
OASIS_CORE_RUNTIME_LOADER_VERSION=24.2
OASIS_CLI_VERSION=0.10.0

# Node configuration
NODE_NAME="My ROFL Node"

# Network settings (adjust for your local network)
GATEWAY_IP=192.168.0.1
LAN_NETWORK=192.168.0.0/16

# Provider configuration
PROVIDER_ACCOUNT=test:alice
PAYMENT_ADDRESS=test:alice

# Resource allocation (adjust based on your hardware)
TOTAL_MEMORY_MB=65536  # 64 GB
TOTAL_CPUS=24
TOTAL_STORAGE_BYTES=549755813888  # 512 GB

# Marketplace offers (small, medium, large)
OFFER_SMALL_MEMORY=4096
OFFER_SMALL_CPUS=2
OFFER_SMALL_STORAGE=20000
OFFER_SMALL_HOURLY_PRICE=10
OFFER_SMALL_CAPACITY=50

OFFER_MEDIUM_MEMORY=8192
OFFER_MEDIUM_CPUS=4
OFFER_MEDIUM_STORAGE=50000
OFFER_MEDIUM_HOURLY_PRICE=20
OFFER_MEDIUM_CAPACITY=25

OFFER_LARGE_MEMORY=16384
OFFER_LARGE_CPUS=8
OFFER_LARGE_STORAGE=100000
OFFER_LARGE_HOURLY_PRICE=40
OFFER_LARGE_CAPACITY=10

# TEE type (tdx or sgx)
TEE_TYPE=tdx
